    <!-- https://github.com/EpicGames/UnrealEngine/blob/4.10/Engine/Source/Programs/UnrealBuildTool/Android/AndroidPluginLanguage.cs -->
    <!-- optional files or directories to copy to Intermediate/Android/APK -->
    <resourceCopies>
        <isArch arch="arm64-v8a">
            <copyFile src="$S(PluginDir)/lib/Android/$S(Architecture)/libmediapipe_api.so"
                      dst="$S(BuildDir)/libs/$S(Architecture)/libmediapipe_api.so" />
			

            <copyDir src="$S(PluginDir)/Data/modules"
                      dst="$S(BuildDir)/assets/modules" />

            <copyFile src="$S(PluginDir)/lib/Android/libm4u_android_lib.jar"
                      dst="$S(BuildDir)/libs/libm4u_android_lib.jar" /> 
        </isArch>
    </resourceCopies>
